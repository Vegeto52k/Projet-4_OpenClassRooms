<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SpinnerFilteredActivity">

    <TextView
        android:id="@+id/spinner_filtered_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtrer par salle"
        android:textStyle="italic"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/spinner_filtered_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/spinner_filtered_text"
        app:layout_constraintLeft_toLeftOf="@id/spinner_filtered_text"
        app:layout_constraintRight_toRightOf="@id/spinner_filtered_text" />

    <Button
        android:id="@+id/spinner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        app:layout_constraintTop_toBottomOf="@+id/spinner_filtered_select"
        app:layout_constraintLeft_toLeftOf="@id/spinner_filtered_select"
        app:layout_constraintRight_toRightOf="@+id/spinner_filtered_select" />

</androidx.constraintlayout.widget.ConstraintLayout>